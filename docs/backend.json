
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name"
        }
      },
      "required": [
        "uid",
        "email"
      ]
    },
    "vehicle": {
      "title": "Vehicle",
      "description": "A vehicle in the inventory.",
      "type": "object",
      "properties": {
        "make": { "type": "string" },
        "model": { "type": "string" },
        "year": { "type": "number" },
        "variant": { "type": "string" },
        "color": { "type": "string" },
        "price": { "type": "number" },
        "priceType": { "type": "string", "enum": ["negotiable", "fixed"] },
        "mileage": { "type": "number" },
        "fuelType": { "type": "string", "enum": ["petrol", "diesel", "cng", "electric"] },
        "transmission": { "type": "string", "enum": ["manual", "automatic"] },
        "ownership": { "type": "string", "enum": ["first", "second", "third", "fourth"] },
        "status": { "type": "string", "enum": ["available", "sold"] },
        "description": { "type": "string" },
        "features": { "type": "array", "items": { "type": "string" } },
        "imageUrls": { "type": "array", "items": { "type": "string", "format": "uri" }, "maxItems": 8 },
        "aiHint": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["make", "model", "year", "price", "status", "description", "features", "imageUrls", "variant", "color", "priceType", "mileage", "fuelType", "transmission", "ownership", "createdAt"]
    },
    "galleryItem": {
      "title": "Gallery Item",
      "description": "An item in the customer gallery.",
      "type": "object",
      "properties": {
        "caption": { "type": "string" },
        "imageUrl": { "type": "string", "format": "uri" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["caption", "imageUrl", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "email-password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "Stores user profile information"
    },
    "/vehicles/{vehicleId}": {
        "schema": { "$ref": "#/entities/vehicle" },
        "description": "Stores all vehicle inventory data."
    },
    "/gallery/{galleryItemId}": {
        "schema": { "$ref": "#/entities/galleryItem" },
        "description": "Stores customer gallery images and captions."
    }
  },
  "storage": {
    "rules": "rules/storage.rules"
  }
}
    
